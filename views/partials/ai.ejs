<link rel="stylesheet" href="stylesheets/ai.css">
<div class="container">
    <div class="row">
        <div id="canvas-row" class="col-md-9">
            <canvas id="canvas" drawing></canvas>
        </div>
        <div class="col-md-3">
            <form>
                <div class="form-group form-inline">
                    <label for="boardSize">Board Size</label>
                    <select ng-model="boardSizeX" id="boardSize" class="form-control">
                        <!--<option>6</option>-->
                        <option value="7" selected="selected">7</option>
                        <!--<option>8</option>-->
                        <!--<option>9</option>-->
                    </select>
                    x
                    <select ng-model="boardSizeY" id="boardSize" class="form-control">
                        <option value="6" selected="selected">6</option>
                        <!--<option>7</option>-->
                        <!--<option>8</option>-->
                        <!--<option>9</option>-->
                    </select>
                </div>
                <div class="form-group form-inline">
                    <label for="winLength">Win Length</label>
                    <select ng-model="winLength" id="winLength" class="form-control">
                        <!--<option>1</option>-->
                        <!--<option>2</option>-->
                        <!--<option>3</option>-->
                        <option value="4" selected="selected">4</option>
                        <!--<option>5</option>-->
                        <!--<option>6</option>-->
                        <!--<option>7</option>-->
                    </select>
                </div>
                <div class="form-group form-inline">
                    <label for="aiTime">AI Turn Time</label>
                    <select ng-model="aiTime" id="aiTime" class="form-control">
                        <option value="1" selected="selected">1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10</option>
                    </select>
                    Seconds
                </div>
                <div class="form-group">
                    <label>Play Options</label>
                    <label style="display: none" class="radio-inline">
                        <input ng-model="playOptions" type="radio" id="playOptions" name="playOptions" value="ai"> AI vs AI
                    </label>
                    <label class="radio-inline">
                        <input checked="checked" ng-model="playOptions" type="radio" id="playOptions" name="playOptions" value="player"> Player vs AI
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" ng-click="play()" class="btn btn-default">Play!</button>
                </div>
            </form>
        </div>
    </div>
</div>