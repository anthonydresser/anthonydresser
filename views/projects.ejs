<div class="container-fluid">
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-s-12 col-xs-12">
          <h1>{{main.name}}</h1>
          <p>{{main.short}}</p>
          <p><a class="btn btn-primary btn-md" href="{{main.link}}" role="button">Learn More</a></p>
        </div>
        <div class="col-lg-6 col-md-6 col-s-12 col-xs-12">
          <img class="img-responsive col-xs-12" ng-src="{{main.image}}">
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <article ng-repeat="project in projects | filter:tagSearch | orderBy: 'published': true" id="{{project.name}}">
        <div class="row">
          <div class="col-md-9 col-s-12 col-xs-12">
            <h2>{{project.name}}</h2>
            <p>{{project.body}}</p>
            <small class="text-muted">Published: {{project.dateString}}</small>
            <div id="tags">
              <tag ng-repeat="tag in project.tags">{{tag}}</tag>
            </div>
            <p><a class="btn btn-primary btn-md" href="{{project.link}}" role="button">Use it here</a></p>
          </div>
          <div class="col-md-3 col-s-6 col-xs-6">
            <img style="margin-top: 20px" class="img-responsive" ng-src="{{project.image}}">
          </div>
        </div>
      </article>
    </div>
    <div class="col-md-3" id="rightCol">
      <div class="row">
        <div class="col-md-12">
          <h4>Search by Tag</h4>
          <h6>Most Popular</h6>
          <tag ng-repeat="tag in popTags" ng-click="tagSearch = tag">{{tag}}</tag>
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search by tags..." ng-model="tagSearch">
            <span class="input-group-addon">
              <button ng-click="tagSearch = ''"><i class="fa fa-times"></i></button>
            </span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h4>Quick Links</h4>
          <ul class="nav nav-stacked" id="sidebar">
            <li ng-repeat="project in projects | orderBy: 'published' : true"><a href="" ng-click="scrollTo(project.name)">{{project.name}}</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
