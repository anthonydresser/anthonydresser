<div id="body" class="container-fluid">
  <div class="col-sm-6 col-sm-offset-3">
    <h1 style="color: white">Login</h1>
    <div ng-show="message.length > 0" class="alert alert-danger">{{message}}</div>
    <form novalidate>
      <div class="form-group">
        <label style="color: white">Email</label>
        <input ng-model="email" type="test" class="form-control" name="email">
      </div>
      <div class="form-group">
        <label style="color: white">Password</label>
        <input ng-model="password" type="password" class="form-control" name="password">
      </div>
      <button ng-click="login()" type="submit" class="btn btn-warning btn-lg">Login</button>
    </form>
    <hr>
    <p style="color: white">Need an account? <a href="#/signup">Signup</a></p>
  </div>
</div>
