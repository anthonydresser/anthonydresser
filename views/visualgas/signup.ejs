<div ng-controller="signupCtrl" id="body" class="container-fluid">
  <div class="col-sm-6 col-sm-offset-3">
    <h1 style="color: black">Sign Up</h1>
    <div ng-show="message.length > 0" class="alert alert-danger">{{message}}</div>
    <form novalidate>
      <div class="form-group">
        <label style="color: black">Email</label>
        <input ng-model="email" type="test" class="form-control" name="email">
      </div>
      <div class="form-group">
        <label style="color: black">Password</label>
        <input ng-model="password" type="password" class="form-control" name="password">
      </div>

      <button ng-click="signUp()" type="submit" class="btn btn-warning btn-lg">Sign Up</button>
    </form>

    <hr>

    <p style="color: black">Already have an account? <a ui-sref="login">Login</a></p>
  </div>
</div>
